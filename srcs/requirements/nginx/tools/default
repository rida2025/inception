server {
    listen 443 ssl;

    server_name mel-jira.42.fr;

    ssl_certificate /etc/ssl/certs/mel-jira.42.fr.crt;
    ssl_certificate_key /etc/ssl/private/mel-jira.42.fr.key;
    ssl_protocols TLSv1.3;

    root /var/www/html;
    index index.php;

    location ~ \.php$ {
        include snippets/fastcgi-php.conf;
        fastcgi_pass wordpress:9000;
    }
}